<% layout("/layout/boilerplate") %>
<h3 class="card-title offset-2"><%= listing.title %></h3>
    <div class="card offset-2 card-show-listing" style="width: 18rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="ListingImage">
        <div class="card-body">
          <p class="card-text"><%= listing.description %> <br> <%= listing.location %> <br> <%= listing.country %> <br> &#8377;<%= listing.price.toLocaleString("en-IN") %><br></p>
          <div class="on-line">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger">Edit here</a>
            &nbsp;
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
              <button class="btn btn-primary btn-dark">delete list here</button>
          </form>
          </div>
        </div>
      </div>
      <br>
      <hr>
      <form class="offset-2 needs-validation" action="/listings/<%= listing._id %>/review" method="POST" novalidate>
        <div class="form-group">
            <label for="rating" class="form-label">Rating:</label>
            <input type="range" id="rating" name="reviews[rating]" min="1" max="5" step="1" value="3" oninput="updateRating(this.value)" class="form-range form-control">
            <span id="rating-value">3</span>/5
        </div>
        <div class="form-group">
            <label for="comment" class="form-label">Comment:</label>
            <textarea id="comment" name="reviews[comment]" rows="4" placeholder="Write your comment here..." class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments</div>
        </div>
        <button type="submit" class="btn btn-danger mb-3">Submit</button>
    </form>

    <hr>
    <h4 class="offset-1">All Reviews</h4>
    <div class="review-container offset-2">
    <% for (let review of listing.reviews) { %>
        <div class="review-card">
            <h5><%= review.randomName %></h5>
            <p>Rating: <%= review.rating %>/5</p>
            <p>"<%= review.comment %>"</p>
            <form action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn btn-dark mt-3">Delete</button>
            </form>
        </div>
        <% } %>
    </div>